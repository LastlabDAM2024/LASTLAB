<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F5FE"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SUSCRIPCIONES"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <!-- Botón "Cancelar Suscripción" -->
    <Button
        android:id="@+id/btnCancelarSuscripcion"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitulo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:background="#3A75A5"
        android:text="Cancelar Suscripción"
        android:textColor="#FFFFFF" />

    <!-- Botón "Suscribirse" -->
    <Button
        android:id="@+id/btnSuscribirse"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCancelarSuscripcion"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:background="#4CAF50"
        android:text="Suscribirse"
        android:textColor="#FFFFFF" />

    <!-- Botón "Volver" -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSuscribirse"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="13dp"
        android:background="#1E88E5"
        android:text="Volver"
        android:textColor="#EAE9E9" />

</RelativeLayout>
